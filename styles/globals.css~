/* styles/globals.css */

/* 1) Font loading  
   — For best performance, move these to <Head> as <link rel="preconnect"> + <link href="…">, but kept here for simplicity */
@import url('https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Montserrat:wght@400;600&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Roboto+Mono:wght@700&display=swap');

/* 2) Tailwind directives */
@tailwind base;
@tailwind components;
@tailwind utilities;

/* 3) CSS variables & custom fonts */
:root {
  --font-playfair: 'Playfair Display', serif;
  --font-body:    'Montserrat', sans-serif;
}

@font-face {
  font-family: 'DIN Condensed';
  src: url('/fonts/din-condensed-bold.ttf') format('truetype');
  font-weight: 700;
  font-style: normal;
  font-display: swap;
}

/* 4) Base layer: global resets & typography */
@layer base {
  /* Global box-sizing reset */
  *, *::before, *::after {
    box-sizing: border-box;
  }

  /* Body defaults */
  body {
    @apply bg-ivory text-gray-700 font-body leading-relaxed;
  }

  /* Headings: scaled with clamp() for fluid typography */
  h1 {
    @apply font-header text-navy;
    line-height: 1.2;
    font-size: clamp(1.75rem, 5vw, 2.5rem);
  }
  h2, h3, h4, h5, h6 {
    @apply font-header text-navy;
    line-height: 1.25;
  }

  /* Section divider */
  hr.section-divider {
    @apply border-t-2 border-gold w-24 mx-auto my-6;
  }
}

/* 5) Utility components */
@layer utilities {
  /* ── License Plate Text ── */
  .plate__text {
    @apply uppercase font-bold tracking-widest;
    font-family: 'Roboto Mono', monospace;
    letter-spacing: 0.2em;
    text-shadow:
      1px 1px 0 rgba(0,0,0,0.5),
     -1px -1px 0 rgba(255,255,255,0.7);
  }

  /* ── Scrabble Tile ── */
  .tile--scrabble {
    @apply bg-cream border-neutral
           rounded-sm w-8 sm:w-10 aspect-square
           flex items-center justify-center
           font-body font-bold text-sm sm:text-base
           drop-shadow-sm transition-transform duration-300 ease-out;
  }
  .tile--scrabble:hover {
    @apply -translate-y-1 shadow-md;
  }

  /* ── Name Highlight ── */
  .tile--name {
    @apply bg-card-red text-white border-red-700;
  }

  /* ── Cover Board ── */
  .cover .board {
    @apply grid grid-cols-[repeat(11,minmax(0,1fr))] 
           grid-rows-[repeat(11,minmax(0,1fr))] 
           gap-2 bg-cream p-4;
  }

  /* ── Tile-Drop Animation ── */
  @keyframes tileDrop {
    from { transform: translateY(-40px) rotate(-10deg); opacity: 0; }
    to   { transform: translateY(0)        rotate(0deg);  opacity: 1; }
  }
  .anim--tile-drop {
    opacity: 0;
    animation: tileDrop 0.4s ease-out forwards;
  }

  /* ── Enter Button ── */
  .btn--enter {
    @apply tile--scrabble cursor-pointer hover:scale-105;
  }

  /* ── Plate Overlay ── */
  .plate__overlay {
    @apply absolute inset-0 px-8 py-6;
    display: grid;
    grid-template-rows: auto auto 1fr auto;
    gap: 0.5rem;
  }
  .overlay__title {
    @apply self-start justify-self-center;
  }
  .overlay__details {
    @apply flex justify-between items-center;
  }
  .overlay__outfit {
    @apply self-end italic text-xs;
  }

  /* ── 3D-Flip Utilities ── */
  .util--perspective { perspective: 1000px; }
  .util--preserve-3d { transform-style: preserve-3d; }
  .util--backface-hidden { backface-visibility: hidden; }
  .util--rotate-y-180 { transform: rotateY(180deg); }
}

/* 6) Site-wide watercolor overlay behind content */
body::before {
  content: "";
  position: fixed;
  inset: 0;
  background: url('/images/ivory-watercolor.png') center/cover no-repeat;
  opacity: 0.12;
  pointer-events: none;
  z-index: -1;
}
